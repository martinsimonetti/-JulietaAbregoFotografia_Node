<div class="container">
    <h1>Editar foto</h1>
    <div class="row justify-content-center mb-5">
        <div class="col-5">
            <div class="card">
                <div class="card-body">
                    <form action="/admin/galeria/modificar" method='post' enctype="multipart/form-data">
                        <input type="hidden" name="id" value="{{foto.id}}">
                        <div class="form-group mb-3">
                            <label>Foto: <input type="file" name="imagen" id="imagen"></label>                            
                            <input type="hidden" name="img_original" value="{{foto.url_foto}}">
                        </div>
                        <div class="form-group my-3">
                            <input type="text" class="form-control" placeholder="Título" name="titulo"
                                value="{{foto.titulo}}">
                        </div>
                        <div class="form-group my-3">
                            <textarea type="text" class="form-control" rows="5" placeholder="Descripción"
                                name="descripcion">{{foto.descripcion}}</textarea>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="text-center">
                                    <button type="submit" class='btn btn-success btn-block'><i class="far fa-save"></i>
                                        Guardar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="text-center mt-3">
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>